---
/**
 * Footer Section: "The Final Seal"
 * Deep maroon background with wax seal and final CTA
 */
import footerContent from '../content/footer.json';
import siteSettings from '../content/siteSettings.json';

const bookingWhatsappUrl = `https://wa.me/${siteSettings.whatsappNumber}?text=${encodeURIComponent(footerContent.bookingWhatsappMessage)}`;
---

<footer class="footer" id="contact">
  <div class="footer-container">
    <!-- CTA Section -->
    <div class="footer-cta">
      <h2 class="footer-title">
        {footerContent.ctaTitle}<br>
        <span class="accent-text">{footerContent.ctaTitleAccent}</span>
      </h2>
      <p class="footer-text" set:html={footerContent.ctaDescription.replace(/\n/g, '<br>')}></p>
      <a href={bookingWhatsappUrl} 
         class="btn btn-whatsapp" 
         target="_blank" 
         rel="noopener noreferrer">
        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        {footerContent.ctaButtonText}
      </a>
    </div>

    <!-- Divider -->
    <div class="footer-divider"></div>

    <!-- Footer Info -->
    <div class="footer-info">
      <div class="footer-brand">
        <div class="wax-seal">
          <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
            <!-- Wax seal shape -->
            <circle cx="50" cy="50" r="45" fill="#5C2E2E"/>
            <circle cx="50" cy="50" r="40" fill="#7A4343"/>
            <circle cx="50" cy="50" r="35" fill="#5C2E2E"/>
            
            <!-- Decorative border -->
            <circle cx="50" cy="50" r="30" fill="none" stroke="#C9A227" stroke-width="1.5"/>
            
            <!-- T initial -->
            <text x="50" y="60" text-anchor="middle" font-family="Cinzel Decorative, serif" font-size="30" font-weight="bold" fill="#C9A227">T</text>
            
            <!-- Small decorative elements -->
            <circle cx="25" cy="50" r="3" fill="#C9A227" opacity="0.5"/>
            <circle cx="75" cy="50" r="3" fill="#C9A227" opacity="0.5"/>
            <circle cx="50" cy="25" r="3" fill="#C9A227" opacity="0.5"/>
            <circle cx="50" cy="75" r="3" fill="#C9A227" opacity="0.5"/>
          </svg>
        </div>
        <div class="footer-brand-text">
          <span class="brand-name"><span class="brand-accent">By</span> Tessa Makeup</span>
          <span class="brand-tagline">{siteSettings.tagline}</span>
        </div>
      </div>

      <div class="footer-location">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <span>{siteSettings.location}</span>
      </div>

      <div class="footer-social">
        <a href={siteSettings.instagramUrl} target="_blank" rel="noopener noreferrer" class="social-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
          <span>Instagram</span>
        </a>
        <span class="social-divider">|</span>
        <a href={siteSettings.facebookUrl} target="_blank" rel="noopener noreferrer" class="social-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
          </svg>
          <span>Facebook</span>
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-copyright">
      <p>&copy; {new Date().getFullYear()} {siteSettings.brandName} Lumajang. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--deep-maroon);
    padding: 6rem 2rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, var(--dusty-rose), var(--antique-gold), var(--dusty-rose));
  }

  .footer-container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  /* CTA Section */
  .footer-cta {
    text-align: center;
    margin-bottom: 4rem;
  }

  .footer-title {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--white);
    margin-bottom: 1.5rem;
  }

  .footer-title .accent-text {
    display: block;
    color: var(--dusty-rose-light);
    font-size: 0.8em;
    margin-top: 0.5rem;
  }

  .footer-text {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  /* Divider */
  .footer-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(201, 162, 39, 0.5), transparent);
    margin-bottom: 3rem;
  }

  /* Footer Info */
  .footer-info {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .wax-seal {
    width: 70px;
    height: 70px;
    animation: float 4s ease-in-out infinite;
  }

  .wax-seal svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.3));
  }

  .footer-brand-text {
    display: flex;
    flex-direction: column;
  }

  .brand-name {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--white);
  }

  .brand-accent {
    font-family: var(--font-accent);
    font-size: 1.5rem;
    color: var(--dusty-rose-light);
  }

  .brand-tagline {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 0.25rem;
  }

  .footer-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
  }

  .footer-location svg {
    color: var(--dusty-rose-light);
  }

  /* Social Links */
  .footer-social {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    transition: var(--transition-fast);
  }

  .social-link:hover {
    color: var(--dusty-rose-light);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .social-divider {
    color: rgba(255, 255, 255, 0.3);
  }

  /* Copyright */
  .footer-copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-copyright p {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer {
      padding: 4rem 1rem 2rem;
    }

    .footer-info {
      flex-direction: column;
      text-align: center;
    }

    .footer-brand {
      flex-direction: column;
    }

    .footer-social {
      margin-top: 1rem;
    }
  }
</style>
